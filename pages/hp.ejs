       <script>
        // FOR MESSAGE US SECTION ===================================================
        document.addEventListener("DOMContentLoaded", () => {
  const form = document.getElementById("contact");
  const responseMsg = document.getElementById("responseMessage");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    responseMsg.style.display = "block";
    responseMsg.style.color = "gray";
    responseMsg.textContent = "Sending message...";

    const fullname = document.getElementById("fullname").value.trim();
    const email = document.getElementById("email").value.trim();
    const phone_number = document.getElementById("phone_number").value.trim();
    const message = document.getElementById("message").value.trim();

    try {
      const res = await fetch("/contact", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ fullname, email, message, phone_number }),
      });

      const data = await res.json();

      if (data.success) {
        responseMsg.style.color = "#3acbdf";
        responseMsg.textContent = "" + data.message;
        form.reset();
      } else {
        responseMsg.style.color = "red";
        responseMsg.textContent = "" + (data.message || "Submission failed!");
      }

    } catch (err) {
      responseMsg.style.color = "red";
      responseMsg.textContent = "Network error, please try again.";
    }

    setTimeout(() => {
      responseMsg.style.opacity = "0";
      setTimeout(() => {
        responseMsg.style.display = "none";
        responseMsg.style.opacity = "1";
      }, 500);
    }, 2500);
  });
});
